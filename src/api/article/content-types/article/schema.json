{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "price": {
      "type": "float",
      "required": true
    },
    "available": {
      "type": "boolean"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "description_long": {
      "type": "text",
      "required": true
    },
    "description_short": {
      "type": "string",
      "required": true,
      "maxLength": 70
    },
    "amount": {
      "type": "integer"
    },
    "category_id": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "tags_id": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tag.tag"
    },
    "colors_id": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::color.color"
    },
    "measure_id": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::measure.measure"
    },
    "reviews_id": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::review.review"
    }
  }
}
